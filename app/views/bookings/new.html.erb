<div class="bg-bisque" style="min-height: 100vh">
  <div class="container-fluid py-5">
    <div class="row justify-content-center">
      <div class="card shadow col-8 p-4">
        <h2>Book a beautifun goat</h2>

      <%= simple_form_for [@goat, @booking] do |f| %>

      <div class="form-inputs">
        <%= f.input :start_date, html5:true %>
        <%= f.input :end_date, html5:true %>
      </div>
      <div class="form-actions">
        <%= f.submit "Create booking", class: "btn-goat see_all" %>
      </div>

     <% end %>
      </div>
    </div>
  </div>
</div>
